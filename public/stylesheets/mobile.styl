@media screen and (max-width:480px)
  #wrapper
    margin-top: 0
    margin-left: 10px
    margin-right:10px
    width:450px
  #nav
    display:none
  #content
    #leftbar
      display:none
  #header
    width: 430px 
    height: 50px
    #logo
      float: left
      width: 300px
      h1
        border: 0 solid black
        height: 50px
        img
          display:none
        a
          height: 50px
    #mobileMenu
      float:right
      margin-right: 15px
      margin-top: 5px
      color: white
      width:80px
      padding: 5px
      height: 25px
      background-color:grey 
      display: inline
      p
        line-height: 1.5em
        text-align: center
