script
  $(document).ready(function() {
    $( ".droppable" ).droppable({
      drop: function( event, ui ) {
        var id = $( this ).find(".id").attr("value");
        var className = ui.draggable.find("a").attr("value");
        window.location.href = "/schedule/addClass?classname="+className+"&id="+id;
      }
    });
  });


- each day in schedule.days
  h3= day.name
    table#classSchedule
      tbody
        tr
          th Time
          th Class Name
        - each time in day.times
          tr
            td #{time.startTime} - #{time.endTime}
            td.droppable #{time.className}
              .id(style="display:none", value="#{time._id}")


